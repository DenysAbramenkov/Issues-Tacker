@model List<Issues_Tracker.Models.UserView>

@{
    ViewBag.Title = "List of Users";
}

<h2>List of Users</h2>

<hr />

<div class="table-responsive">
    <table class="table table-striped table-responsive">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model[0].User.Roles)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model[0].User.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model[0].User.UserName)
                </th>
            </tr>
        </thead>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr class="align-center">
                    <td>
                        @Html.DisplayFor(model => item.UserRoles)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.User.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.User.UserName)
                    </td>
                    <td>
                        <a href="#" data-user="@item.User.Id" class="btn btn-primary editRole">Edit role</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>

<script>
    $(".editRole").click(function () {
        var id = $(this).data("user");
        var url = '@Url.Action("GetChangeRole", "Account")/';
        window.location.href = url + id;
    });
</script>
