@model Issues_Tracker.Models.Login.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <h4>Input password</h4>
    @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })

    <h4>ConfirmPassword</h4>
    @Html.EditorFor(x => x.ConfirmationPassword, new { htmlAttributes = new { @class = "form-control" } })

    <h4>NewPassword</h4>
    @Html.EditorFor(x => x.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
    <input style="margin-top:20px" type="submit" class="btn btn-primary" value="Change Password">
}
