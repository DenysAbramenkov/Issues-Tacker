@model Issues_Tracker.Issue

@{
    ViewBag.Title = "List of Issues for the Project";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type='text/javascript' src='//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js'></script>
<script type='text/javascript' src='http://site.ru/wp-includes/js/jquery/jquery-migrate.min.js?ver=1.2.1'></script>


<div class="modal fade"  id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deletelLabel" data-show="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <p>Issue number: @(Model.Number.ToString())</p>
                    <p>Issue summary: @(Model.Summary)</p>
                    <p>Issue Descriprion: @(Model.Descripton)</p>
                    <p>Issue Priority: @(Model.Priority.Name)</p>
                    <p>Issue Project: @(Model.Project.Name)</p>
                    <p>Issue State: @(Model.State.Name)</p>
                    <p>Issue Assignee: @(Model.User.Name)</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="submit" id="btnyes" class="btn btn-primary" value="yes" asp-controller="Issue" asp-action="DeleteIssue">Yes</button>
            </div>
        </div>
    </div>
</div>
